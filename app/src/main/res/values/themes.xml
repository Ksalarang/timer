<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Timer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_400</item>
        <item name="colorPrimaryVariant">@color/teal_400_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_200A</item>
        <item name="colorSecondaryVariant">@color/green_200A_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TimeUnit">
        <item name="android:inputType">number</item>
        <item name="android:textSize">80sp</item>
        <item name="android:maxLength">2</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">@null</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="TimeColon" parent="TimeUnit">
        <item name="android:paddingBottom">10dp</item>
    </style>
</resources>